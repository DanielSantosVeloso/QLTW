<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        app:layout_constraintBottom_toTopOf="@+id/Nome_cad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/microsoftteams_image_removebg_preview" />

    <TextView
        android:id="@+id/text_aviso_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="Já tem um cadastro? logue"
        app:layout_constraintBottom_toTopOf="@+id/red_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cadastrar" />

    <Button
        android:id="@+id/cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#2342F1"
        android:text="Cadastrar"
        app:cornerRadius="10sp"
        app:layout_constraintBottom_toTopOf="@+id/text_aviso_login"
        app:layout_constraintEnd_toEndOf="@+id/text_aviso_login"
        app:layout_constraintTop_toBottomOf="@+id/Senha_cad" />

    <Button
        android:id="@+id/red_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginBottom="1dp"
        android:backgroundTint="#2342F1"
        android:text="Aqui!!"
        app:cornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_aviso_login"
        app:layout_constraintTop_toBottomOf="@+id/text_aviso_login" />

    <TextView
        android:id="@+id/text_cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Cadastro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Nome_cad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0457FF"
        android:ems="10"
        android:inputType="text"
        android:text="Nome de usuário"
        app:layout_constraintBottom_toTopOf="@+id/Email_cad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/Email_cad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0457FF"
        android:ems="10"
        android:inputType="text"
        android:text="Email"
        app:layout_constraintBottom_toTopOf="@+id/Senha_cad"
        app:layout_constraintStart_toStartOf="@+id/Nome_cad"
        app:layout_constraintTop_toBottomOf="@+id/Nome_cad"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/Senha_cad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:backgroundTint="#0457FF"
        android:ems="10"
        android:inputType="text"
        android:text="Senha"
        app:layout_constraintBottom_toTopOf="@+id/cadastrar"
        app:layout_constraintStart_toStartOf="@+id/Email_cad"
        app:layout_constraintTop_toBottomOf="@+id/Email_cad"
        tools:ignore="TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>